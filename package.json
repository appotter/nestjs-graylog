{
  "name": "nestjs-graylog",
  "version": "1.0.0",
  "description": "NestJS provider to integrates with Graylog",
  "author": "Phitsanu Chuamuangphan <ap.phitsanu@gmail.com, contact@phitsanu.ch>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "src/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "rimraf ./dist && tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appotter/nestjs-graylog.git"
  },
  "keywords": [
    "nestjs",
    "graylog",
    "gelf",
    "logger"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/appotter/nestjs-graylog/issues"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.7",
    "graylog2": "^0.2.1"
  },
  "devDependencies": {
    "@nestjs/config": "^1.2.1",
    "@nestjs/core": "^8.4.7",
    "@nestjs/testing": "^8.4.7",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.0",
    "jest": "28.1.3",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.4.7",
    "graylog2": "^0.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/appotter/nestjs-graylog#readme"
}
